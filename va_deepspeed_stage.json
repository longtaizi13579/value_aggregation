{
    "bf16": {
        "enabled": true
    },
    "gradient_checkpointing": {
        "enabled": true
    },
    "fp16": {
        "enabled": false,
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "initial_scale_power": 16,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 1e-4,
            "weight_decay": 1e-5
        }
    },
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "warmup_min_lr": 1e-5,
            "warmup_max_lr": 1e-4,
            "warmup_num_steps": 200,
            "total_num_steps": 2000
        }
    },
    "zero_optimization": {
    "stage": 3,
    "offload_param": {
        "device": "cpu",
        "pin_memory": true
    },
    "offload_optimizer": {
        "device": "cpu",
        "pin_memory": true
    },
    "overlap_comm": true,
    "contiguous_gradients": true,
    "stage3_param_persistence_threshold": 100000,
    "stage3_max_live_parameters": 1e9,
    "stage3_max_reuse_distance": 1e9
    },
    "gradient_accumulation_steps": 1,
    "steps_per_print": 100,
    "train_batch_size": 2,
    "train_micro_batch_size_per_gpu": 2,
    "wall_clock_breakdown": false
}